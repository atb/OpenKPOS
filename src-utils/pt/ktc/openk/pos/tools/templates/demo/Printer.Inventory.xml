<output>
    <ticket>
        <image>Printer.Ticket.Logo</image>
        <line></line>
        <line>
            <text align="center" length="42">Exemplo de recibo.</text>
        </line>
        <line>
            <text align="center" length="42">Este template pode ser alterado</text>
        </line>
        <line>
            <text align="center" length="42">no painel de recursos</text>
        </line>
        <line></line>
        <line>
            <text>Data:     ${inventoryrecord.printDate()}</text>
        </line>
        <line>
            <text>Razão:    ${inventoryrecord.printReason()}</text>
        </line>
        <line>
            <text>Local:    ${inventoryrecord.printLocation()}</text>
        </line>
        <line size="1">
            #if ($inventoryrecord.isInput())
            <text align ="center" length="42">Entrada</text>
            #else
            <text align ="center" length="42">Saída</text>
            #end
        </line>
        <line></line>    
        <line>
            <text align ="left" length="17">Item</text>
            <text align ="right" length="10">Preço</text>
            <text align ="right" length="5"></text>
            <text align ="right" length="10">Valor</text>
        </line>      
        <line>
            <text>------------------------------------------</text>
        </line>   
        #foreach ($inventoryline in $inventoryrecord.getLines())
        <line>
            <text align ="left" length="17">${inventoryline.printName()}</text>
            <text align ="right" length="10">${inventoryline.printPrice()}</text>
            <text align ="right" length="5">x${inventoryline.printMultiply()}</text>
            <text align ="right" length="10">${inventoryline.printSubValue()}</text>
        </line> 
        #if ($inventoryline.productAttSetInstId)
        <line>
	        <text align ="left" length="42">    ${inventoryline.productAttSetInstDesc}</text>
        </line>
        #end
        #end
        <line>
            <text>------------------------------------------</text>
        </line>   
        <line></line>            
        <line>
            <text align="center" length="42">Obrigao pela sua preferência.</text>
        </line>   
    </ticket>
</output>